<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A9A9C4"
    android:orientation="vertical"
    tools:context=".MainActivity">




    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:layout_marginLeft="60dp"
        android:layout_height="wrap_content"
        android:text="Hãy nhập khoản thu của bạn vào đây nhé!" />

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="50dp"
            android:layout_marginLeft="30dp"
            android:paddingTop="8dp"
            android:paddingLeft="10dp"
            android:textColor="@color/white"
            android:background="@drawable/layoutvnd"
            android:layout_height="match_parent"

            android:text="Ten" />

        <EditText
            android:id="@+id/edtKhoanThu"
            android:layout_width="match_parent"
            android:layout_marginLeft="8dp"
            android:background="@null"
            android:textSize="25dp"
            android:textColor="@color/black"
            android:layout_height="match_parent"

            android:ems="10"
            android:hint="A"
            android:inputType="text"
            android:text="" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView"
            android:layout_width="50dp"
            android:layout_marginLeft="30dp"
            android:paddingTop="8dp"
            android:paddingLeft="10dp"
            android:textColor="@color/white"
            android:background="@drawable/layoutvnd"
            android:layout_height="match_parent"

            android:text="VND" />

        <EditText
            android:id="@+id/edtLuongThu"
            android:layout_width="match_parent"
            android:layout_marginLeft="8dp"
            android:background="@null"
            android:textSize="25dp"
            android:layout_height="match_parent"
            android:textColor="@color/black"
            android:ems="10"
            android:hint="0đ"
            android:inputType="text"
            android:text="" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">


        <ImageButton
            android:id="@+id/BtnDongHo"
            android:layout_marginTop="7dp"
            android:background="#A9A9C4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-10dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/dongho" />

        <TextView
            android:id="@+id/txtTime"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ems="10"

            android:gravity="center"
            android:inputType="text"
            android:text="" />
    </LinearLayout><LinearLayout
    android:layout_width="400dp"
    android:layout_height="40dp"
    android:layout_marginTop="30dp"
    android:orientation="horizontal">


    <ImageButton
        android:id="@+id/BtnLich"
        android:layout_marginTop="7dp"
        android:background="#A9A9C4"
        android:layout_width="wrap_content"
        android:layout_marginLeft="-10dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:srcCompat="@drawable/lich" />

    <TextView
        android:id="@+id/txtDate"
        android:layout_width="wrap_content"
        android:textColor="@color/black"
        android:gravity="center"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:ems="10"
        android:inputType="text"
        android:text="" />
</LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnAnhThu"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="105dp"
        android:layout_marginTop="120dp"
        android:background="@drawable/layoutbutton"
        android:text="Chọn ảnh"
        android:textColor="#DDD3D3" />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSaveThu"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="105dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/layoutbutton"
        android:text="Lưu"
        android:textColor="#DDD3D3" />

</LinearLayout>